<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Schedules</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Starts at</th>
        <th>Ends at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @schedules.each do |schedule| %>
        <tr>
          <td><%= schedule.starts_at.strftime('%B %d, %Y') %></td>
          <td><%= schedule.ends_at.strftime('%B %d, %Y') %></td>
          <td><%= link_to 'Show', schedule %></td>
          <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
          <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Schedule', new_schedule_path %>

</div>


